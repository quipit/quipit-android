<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/AppTheme.QuipItBar</item>

        <item name="background">@color/quipit_white</item>
        <item name="android:windowBackground">@color/quipit_white</item>

        <item name="colorPrimary">@color/quipit_secondary_light</item>
        <item name="colorPrimaryDark">@color/quipit_secondary_dark</item>
        <item name="colorAccent">@color/quipit_brand</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme.NoActionBar">
    </style>

    <style name="AppTheme.QuipItBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Support library compatibility -->
        <item name="background">@color/quipit_brand</item>
    </style>

</resources>
