<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/quipit_main"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/quipit_alt"
        android:textSize="50sp"
        android:layout_marginTop="220dp"
        android:text="@string/app_name_lower"
        />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@color/quipit_alt"
        android:textColor="@color/quipit_main"
        android:layout_marginBottom="@dimen/login_margin_bottom"
        />

</RelativeLayout>
