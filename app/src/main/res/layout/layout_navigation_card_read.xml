<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Each notification is a card  TODO: we might end up not using a cardview -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_tweet"
        android:background="@color/notification_card_background_read"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Inside the notification card
             TODO: style the image view
             -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/quipit"
                android:id="@+id/iv_notification_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/small_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brother Darkness added you to the @darkness circle"
                android:id="@+id/tv_notification_headline"
                android:focusable="false"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_toRightOf="@+id/iv_notification_image"
                android:layout_toEndOf="@+id/iv_notification_image"
                android:layout_margin="@dimen/small_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h"
                android:id="@+id/tv_notification_timestamp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/tv_notification_headline"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_margin="@dimen/small_margin" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>