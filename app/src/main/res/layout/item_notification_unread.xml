<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/quipit"
        android:id="@+id/iv_notification_image"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:layout_margin="@dimen/small_margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notification_timestamp"
        android:textColor="@color/quipit_text_secondary"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/small_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notification_headline"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:focusable="false"
        android:textColor="@color/quipit_text"
        android:layout_toRightOf="@id/iv_notification_image"
        android:layout_toLeftOf="@id/tv_notification_timestamp"
        android:layout_toEndOf="@id/iv_notification_image"
        android:layout_margin="@dimen/small_margin"
        />

</RelativeLayout>